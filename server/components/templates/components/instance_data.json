{
   "response": {
        {% if instance_data %}
        "found": true,
        "data": {
           "component_id": {{ instance_data.id }},
           "description": "{{ instance_data.description }}",
           "cost": {{ instance_data.cost }},
           {% block data %}{% endblock %},
           "metrics": {
               {% block metrics %}{% endblock %}
           }
        }
        {% else %}
        "found": false,
        "error_msg": "No data was found for the requested component."
        {% endif %}
    }
}
